<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.DayFragment">
<!--    <androidx.viewpager2.widget.ViewPager2-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:id="@+id/viewpager"-->
<!--        android:layout_alignParentTop="true"-->
<!--        android:layout_alignParentStart="true" />-->
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    </androidx.viewpager.widget.ViewPager>
    <View
        android:id="@+id/lunar_date_bar"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="99dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/rounded_corner" />
    <TextView
        android:id="@+id/time_now_in_one_day"
        android:layout_width="wrap_content"
        android:layout_height="94dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="112dp"
        android:layout_marginStart="70dp"
        android:gravity="center"
        android:text="Giờ\n\1\nTân Sửu"
        android:textColor="@color/black"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/ngay_am_lich_in_one_day"
        android:layout_width="wrap_content"
        android:layout_height="94dp"
        android:layout_alignTop="@+id/time_now_in_one_day"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="73dp"
        android:gravity="center"
        android:text="Ngày\n\1\nTân Sửu"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/thang_am_lich_in_one_day"
        android:layout_width="wrap_content"
        android:layout_height="94dp"
        android:layout_alignTop="@+id/time_now_in_one_day"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="50dp"
        android:gravity="center"
        android:text="Tháng\n\1\nTân Sửu"
        android:textColor="@color/black"
        android:textSize="20sp" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/day_year_in_one_day"
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:background="@drawable/bg_button"
        android:gravity="center"
        android:text="Thg 5 - 2024"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/to_day_in_one_day"
        android:layout_width="65dp"
        android:layout_height="43dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/day_year_in_one_day"
        android:layout_marginStart="10dp"
        android:background="@drawable/bg_button1"
        android:gravity="center"
        android:text="Hôm nay"
        android:textColor="#827568"
        android:textSize="10sp" />


</RelativeLayout>