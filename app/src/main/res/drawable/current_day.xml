<shape android:shape="rectangle" xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Set màu nền -->
    <solid android:color="#D19744">
    </solid>
    <!-- đặt thuộc tính màu và độ rộng của đường viền -->
    <stroke android:color="@color/pink" android:width="0dp">
    </stroke>
    <!-- các thuộc tính căn chỉnh -->
    <padding android:bottom="20dp" android:left="20dp" android:right="20dp" android:top="20dp">
    </padding>
    <!-- và đây là bán kính đường tròn ở 4 góc -->
    <corners android:radius="50dp">
    </corners>
</shape>